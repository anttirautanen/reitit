{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Error", "ESNext.Iterator", "ESNext.Promise"],
    "module": "nodenext",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true
  },
  "include": ["**/*.ts"],
  "exclude": ["dist"]
}
